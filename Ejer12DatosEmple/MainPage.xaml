<?xml version="1.0" encoding="utf-8"  ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejer12DatosEmple.MainPage"
              >

    <StackLayout  >
        
        <Frame BackgroundColor="Green" Padding="24" CornerRadius="0">
            <Label Text="Ejercicio 1.2" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Nombres" FontSize="16" Padding="30,10,30,10"/>
        <Entry x:Name="txtNombre"/>
        <Label Text="Apellidos" FontSize="16" Padding="30,0,30,0"/>
        <Entry x:Name="txtApellidos"/>
        <Label Text="Edad:" FontSize="16" Padding="30,10,30,10"/>
        <Entry x:Name="txtEdad" Keyboard="Numeric"/>
        <Label Text="Correo Electronico:" FontSize="16" Padding="30,10,30,10"/>
        <Entry x:Name="txtEmail" Keyboard="Email"/>

        <Button Text="Enviar información" x:Name="btnEnviar" Clicked="btnEnviar_Clicked" BackgroundColor="Green" />
    </StackLayout>

</ContentPage>
